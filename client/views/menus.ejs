<!DOCTYPE html>
<html>
<head>
  <%- include('partials/Head.ejs') %>
</head>
<body>
  <%- include('partials/Navbar.ejs') %>

  <div class="container">
    <%- include('partials/alerts.ejs', { messages: { 
      success: success, 
      error: error, 
      info: info, 
      warning: warning 
    } }) %>
    
    <% if (menus.length > 0) { %>
      <% menus.forEach(menu => { %>
        <%- include('partials/menuCard.ejs', { menu: menu }) %>
      <% }) %>
    <% } else { %>
      <div class="alert alert-info" role="alert">
        No hay menús disponibles en la base de datos.
      </div>
    <% } %>

    <div class="d-flex justify-content-end">
      <a href="/menus/Crear" class="btn btn-success mt-3">Crear Menú</a>
    </div>

    <%- include('partials/Footer.ejs') %>
  </div>
</body>
</html>
