<!DOCTYPE html>
<html>
<head>
  <%- include('partials/Head.ejs') %>
</head>
<body>
  <%- include('partials/Navbar.ejs') %>

  <div class="container mt-4">
   
    <%- include('partials/alerts.ejs', { messages: { 
      success: success, 
      error: error, 
      info: info, 
      warning: warning 
    } }) %>
    
    <div class="card">
      <div class="card-header">
        <h2><%= user.username %>'s Profile</h2>
      </div>
      <div class="card-body">
        <h5 class="card-title">Email: <%= user.email %></h5>
        

        <h5 class="mt-4">Saved Recipes</h5>
        <div class="row">
          <% user.savedRecipes.forEach(recipe => { %>
            <div class="col-md-4">
              <%- include('partials/RecipeCard.ejs', { recipe: recipe }) %>
            </div>
          <% }) %>
        </div>

        <h5 class="mt-4">Saved Menus</h5>
        <div class="row">
          <% user.savedMenus.forEach(menu => { %>
            <div class="col-md-4">
              <%- include('partials/MenuCard.ejs', { menu: menu }) %>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/Footer.ejs') %>
</body>
</html>
