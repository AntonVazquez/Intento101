<!DOCTYPE html>
<html>
<head>
  <%- include('partials/Head.ejs') %>
  <link rel="stylesheet" type="text/css" href="/css/manageRecipes.css">
  <script src="/js/manageUsers.js"></script> 
</head>
<body>
  <%- include('partials/Navbar.ejs') %>

  <div class="container mt-4 manage-container">
    <h1>Gestionar Usuarios</h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Email</th>
          <th scope="col">Nombre de Usuario</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user._id %></td>
            <td><%= user.email %></td>
            <td><%= user.username %></td>
            <td>
              <a href="/admin/users/<%= user._id %>" class="btn btn-primary">Ver</a>
              <a href="/admin/users/<%= user._id %>/edit" class="btn btn-warning">Editar</a>
              <button type="button" class="btn btn-danger delete-user" data-id="<%= user._id %>">Eliminar</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <%- include('partials/Footer.ejs') %>
</body>
</html>

